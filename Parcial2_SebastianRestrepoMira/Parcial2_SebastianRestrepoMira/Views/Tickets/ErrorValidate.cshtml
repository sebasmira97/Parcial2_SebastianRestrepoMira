@model Parcial2_SebastianRestrepoMira.DAL.Entities.Ticket

@{
    ViewData["Title"] = "Entrada Usada";
}

<h1>La boleta ya fue usada</h1>

<hr />


<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsUsed" />
            <div class="form-group">
                <label asp-for="UseDate" class="control-label">Fue usada el día:</label><br />
                <input asp-for="UseDate" class="form-control" />
                <span asp-validation-for="UseDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EntranceGate" class="control-label">Por la entrada:</label>
                <select asp-for="EntranceGate" class="form-control">
                    <option value="" disabled="" selected=""></option>
                    <br />
                    <option value="Norte">Norte</option>
                    <option value="Sur">Sur</option>
                    <option value="Oriental">Oriental</option>
                    <option value="Occidental">Occidental</option>
                </select>
                <span asp-validation-for="EntranceGate" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Index">Volver al validador</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
